#!/bin/sh
#
# Copyright (C) 2015 OpenWrt.org
#

. /lib/functions/uci-defaults.sh
. /lib/ipq806x.sh

board_config_update

board=$(ipq806x_board_name)

case "$board" in
ap-dk04.1-c1|\
hr1901n|\
hr1901n)
	ucidef_set_led_netdev "wlan2g" "WLAN2G" "hr1901:blue:wlan2g" "wifi0" "link tx rx"
	ucidef_set_led_netdev "wlan5g" "WLAN5G" "hr1901:blue:wlan5g" "wifi1" "link tx rx"
	ucidef_set_led_switch "wan" "WAN" "hr1901:blue:wan" "switch0" "0x02"
	ucidef_set_led_switch "lan1" "LAN1" "hr1901:blue:lan1" "switch0" "0x04"
	ucidef_set_led_switch "lan2" "LAN2" "hr1901:blue:lan2" "switch0" "0x08"
	ucidef_set_led_switch "lan3" "LAN3" "hr1901:blue:lan3" "switch0" "0x10"
	ucidef_set_led_switch "lan4" "LAN4" "hr1901:blue:lan4" "switch0" "0x20"
	;;
ap161)
	ucidef_set_led_default "fs" "FS" "ap161:cpu:fengshan" "1"
	;;
ap-ac04)
	ucidef_set_led_default "sys" "SYS" "led_blue" "1"
	ucidef_set_led_default "power" "POWER" "led_yellow" "0"
	ucidef_set_led_netdev "wan" "WAN" "net_blue" "eth1" "link tx rx"
	;;
wxr-2533dhp)
	ucidef_set_led_netdev "wlan2g" "WLAN2G" "wxr-2533dhp:white:wireless1" "wifi1" "link tx rx"
	ucidef_set_led_netdev "wlan5g" "WLAN5G" "wxr-2533dhp:orange:wireless0" "wifi0" "link tx rx"
	ucidef_set_led_netdev "wan" "WAN" "wxr-2533dhp:white:internet" "switch0" "0x20"
	;;
c2600)
	ucidef_set_led_usbport "usb1" "USB 1" "${board}:white:usb_2" "usb1-port1" "usb2-port1"
	ucidef_set_led_usbport "usb2" "USB 2" "${board}:white:usb_4" "usb3-port1" "usb4-port1"
	ucidef_set_led_switch "wan" "wan" "${board}:white:wan" "switch0" "0x20"
	ucidef_set_led_switch "lan" "lan" "${board}:white:lan" "switch0" "0x1e"
	;;
d7800 |\
r7500 |\
r7500v2 |\
r7800)
	ucidef_set_led_usbport "usb1" "USB 1" "${board}:white:usb1" "usb1-port1" "usb2-port1"
	ucidef_set_led_usbport "usb2" "USB 2" "${board}:white:usb2" "usb3-port1" "usb4-port1"
	ucidef_set_led_netdev "wan" "WAN" "${board}:white:wan" "eth0"
	ucidef_set_led_ide "esata" "eSATA" "${board}:white:esata"
	;;
*)
	;;
esac

board_config_flush

exit 0
